@model KL_E_Commerce.Web.Areas.Vendors.Models.StockProductViewModel
@{
    ViewBag.Title = "Stock";
}

<h2>Stock Product</h2>

@Html.DisplayFor(m => m.Product)
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    
    @Html.Hidden("prodID", Model.ProdId)
    <div class="form-group">
        @Html.LabelFor(m => m.Price, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Stock, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Stock, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Stock, "", new { @class = "text-danger" })
        </div>
    </div>

    <input type="submit" value="Stock" />
</div>
}