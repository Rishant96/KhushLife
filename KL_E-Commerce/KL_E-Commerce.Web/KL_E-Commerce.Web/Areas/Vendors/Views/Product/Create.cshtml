@model KL_E_Commerce.Web.Areas.Vendors.Models.CreateProductViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create Products</h2>

<hr />
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.Label("Specifications")
        @foreach (var attr in Model.Attributes)
        {
        <div class="form-group">
            @Html.Label(attr.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("txtValue", "", htmlAttributes: new { @class = "form-control", placeholder = "Value" })
            </div>
        </div>
        }

        <input type="submit" value="Create" />
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>