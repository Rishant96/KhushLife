@model KL_E_Commerce.Web.Areas.Vendors.Models.IndexProductViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.ActionLink("+ Create New Product", "Create", new { id = Model.Id })

<table class="table">
    <tr>
        <th>
            @Html.Label("Id")
        </th>
        <th>
            @Html.Label("Name")
        </th>
        <th>
            @Html.Label("Description")
        </th>
        <th>
            @Html.Label("Vendor")
        </th>
        <th>
            @Html.Label("Category")
        </th>
        <th>
            @Html.Label("Specifications")
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model.Products)
    {
    <tr>
        <td>
            @Html.DisplayFor(m => item.Id)
        </td>
        <td>
            @Html.DisplayFor(m => item.Name)
        </td>
        <td>
            @Html.DisplayFor(m => item.Description)
        </td>
        <td>
            @Html.DisplayFor(m => item.Category.Name)
        </td>
        <td>
            <ul>
            @foreach (var spec in item.Specifications)
            {
                <li>
                    @Html.DisplayFor(m => spec.Name)
                     - 
                    @Html.DisplayFor(m => spec.SpecOptions.First().Value)
                </li>
            }
            </ul>
        </td>
        <td>
            @Html.ActionLink("Stock", "Stock", new { id = item.Id })
        </td>
    </tr>
    }
</table>